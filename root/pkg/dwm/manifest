[namespace]
/app:rwx = $PKG
/proc:rw = /proc
/net:rw = /net
/dev/fb:rw = /dev/fb
/dev/kbd:rw = /dev/kbd
/dev/mouse:rw = /dev/mouse
/dev/klog:rw = /dev/klog
/dev/null:rw = /dev/null
/dev/zero:rw = /dev/zero
